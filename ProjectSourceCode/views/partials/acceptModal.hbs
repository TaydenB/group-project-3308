<style>
    .custom-modal-dark {
  background-color: #181818;
  color: #fff;
  border: 2px solid #000;
}
</style>
<div class="modal fade" id="acceptModal-{{username}}"  aria-labelledby="acceptModalLabel-{{username}}">
    <div class="modal-dialog">
        <div class="modal-content custom-modal-dark">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="acceptModalLabel-{{username}}">Accept Challenge</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="data-form-{{username}}" method="POST" action="/profile/social/challenge/accept">
                    <input type="hidden" name="friend_username" value="{{username}}">
                    <label for="friend_username">To: {{username}}</label>
                    <br>
                    <label for="word">Enter the 5-letter word:</label>
                    <input type="text" name="word" id="word" minlength="5" maxlength="5" pattern="^[a-zA-Z]{5}$" required placeholder="buffs" />
                    <br><br>
                    <div class="modal-footer">
                        <button class="btn gold-btn" type="submit">Accept</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>