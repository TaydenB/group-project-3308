<style>
  body {
    background-color: #181818;
    color: white;
  }
  .btn.btn-secondary {
    background-color: #C6AA76;
    border-color: white;
    color: white;
  }
  .btn.btn-secondary:hover {
    opacity: 0.9;
    background-color: grey;
    border-color: black;
  }
  h5.text-muted {
    color: white !important;
  }
</style>
<div class="container py-4">
  <div class="row">
    <!-- Sidebar -->
    {{> profileSidebar}}

    <!-- Main content -->
    <div class="col-9">
      <h2 class="mb-3">Edit Account</h2>
      <h5 class="text-muted mb-4">@{{username}}</h5>

      {{!-- Success / error banner (uses existing partial) --}}
      {{> message}}

      <form method="POST" action="/profile/account/edit">
        <div class="mb-3">
          <label class="form-label">First name (optional)</label>
          <input
            type="text"
            name="first_name"
            class="form-control"
            value="{{first_name}}"
          >
        </div>

        <div class="mb-3">
          <label class="form-label">Last name (optional)</label>
          <input
            type="text"
            name="last_name"
            class="form-control"
            value="{{last_name}}"
          >
        </div>

        <div class="mb-3">
          <label class="form-label">Email (optional)</label>
          <input
            type="email"
            name="email"
            class="form-control"
            value="{{email}}"
          >
        </div>
          <button class="btn btn-secondary">Save Changes</button>
          <a href="/profile/account" class="btn btn-secondary">Cancel</a>
      </form>
    </div>
  </div>
</div>
