<div class="container py-4">
  <div class="row">
    <!-- Sidebar -->
    <div class="col-3">
      <ul class="list-group">
        <li class="list-group-item {{#if active.account}}active{{/if}}">
          <a class="text-decoration-none text-reset" href="/profile/account">Account</a>
        </li>
        <li class="list-group-item {{#if active.stats}}active{{/if}}">
          <a class="text-decoration-none text-reset" href="/profile/stats">Stats</a>
        </li>
        <li class="list-group-item {{#if active.social}}active{{/if}}">
          <a class="text-decoration-none text-reset" href="/profile/social">Social</a>
        </li>
        <li class="list-group-item">
          <a class="text-decoration-none text-reset" href="/logout">Logout</a>
        </li>
      </ul>
    </div>

    <!-- Main content -->
    <div class="col-9">
      {{#if active.account}}
        <h2 class="mb-3">@{{username}}</h2>
        <div class="mb-2"><strong>Name:</strong> {{name}}</div>
        <div class="mb-2"><strong>Email:</strong> {{email}}</div>
      {{/if}}

      {{#if active.stats}}
        <h2 class="mb-3">@{{username}}</h2>
        <h4>Daily Stats</h4>
        <ul class="mb-3">
          <li>Plays: {{stats.plays}}</li>
          <li>Wins: {{stats.wins}}</li>
          <li>Avg Guesses: {{stats.avgGuesses}}</li>
          <li>Avg Time: {{stats.avgTime}}</li>
        </ul>
        <h4>Challenge Stats</h4>
        <ul>
          <li>Plays: {{stats.challengePlays}}</li>
          <li>Wins: {{stats.challengeWins}}</li>
        </ul>
      {{/if}}

      {{#if active.social}}
        <h3>Friends</h3>
        <div class="input-group mb-3">
          <input type="text" class="form-control" placeholder="Add Friend...">
          <button class="btn btn-success">Add</button>
        </div>
        <ul class="list-group">
          {{#each friends}}
            <li class="list-group-item d-flex justify-content-between">
              {{this.username}}
              <button class="btn btn-primary btn-sm">Challenge</button>
            </li>
          {{/each}}
        </ul>
      {{/if}}
    </div>
  </div>
</div>
