<div class="container py-4">
  <div class="row">
    <!-- Sidebar -->
    {{> profileSidebar}}

    <!-- Main content -->
    <div class="col-9">
      {{!-- ACCOUNT TAB --}}
      {{#if active.account}}
        <h2 class="mb-3">@{{username}}</h2>

        {{!-- Show the current info only --}}
        <div class="mb-2">
          <strong>Name:</strong>
          {{#if full_name}}{{full_name}}{{else}}Not set yet{{/if}}
        </div>

        <div class="mb-2">
          <strong>Email:</strong>
          {{#if email}}{{email}}{{else}}Not set yet{{/if}}
        </div>

        <hr class="my-3">

        <a href="/profile/account/edit" class="btn btn-secondary">
          Edit Account
        </a>
      {{/if}}

      {{!-- STATS TAB --}}
      {{#if active.stats}}
        <h2 class="mb-3">@{{username}}</h2>
        <h4>Daily Stats</h4>
        <ul class="mb-3">
          <li>Plays: {{stats.plays}}</li>
          <li>Wins: {{stats.wins}}</li>
          <li>Avg Guesses: {{stats.avgGuesses}}</li>
          <li>Avg Time: {{stats.avgTime}}</li>
        </ul>
        <h4>Challenge Stats</h4>
        <ul>
          <li>Plays: {{stats.challengePlays}}</li>
          <li>Wins: {{stats.challengeWins}}</li>
        </ul>
      {{/if}}

      {{#if active.social}}
        <h3>Friends</h3>
        <ul class="list-group">
          {{#each friends}}
            <li class="list-group-item d-flex justify-content-between">
              {{this.username}}
              <button class="btn btn-primary btn-sm">Challenge</button>
            </li>
          {{/each}}
        </ul>
      {{/if}}
    </div>
  </div>
</div>
