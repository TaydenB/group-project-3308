<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Buff Games</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-sRIl4kxILFvY47J16cr9ZwB07vP4J8+LH7qKQnuqkuIAvNWLzeN8tE5YBujZqJLB" crossorigin="anonymous">
    <link rel="stylesheet" href="/resources/daily.css">
</head>
<body>
<!--Center the game-->
<div class="container text-center mt-5">
    <!--Create the game Board-->
    <div id="game-board" class="mb-4">
        <!--Create the tiles, 6 rows, 5 columns-->
        <div class="row justify-content-center">
            <!--5 tiles per row-->
            <div class="tile"></div><div class="tile"></div><div class="tile"></div>
            <div class="tile"></div><div class="tile"></div>
        </div>
        <div class="row justify-content-center">
            <!--5 tiles per row-->
            <div class="tile"></div><div class="tile"></div><div class="tile"></div>
            <div class="tile"></div><div class="tile"></div>
        </div>
        <div class="row justify-content-center">
            <!--5 tiles per row-->
            <div class="tile"></div><div class="tile"></div><div class="tile"></div>
            <div class="tile"></div><div class="tile"></div>
        </div>
        <div class="row justify-content-center">
            <!--5 tiles per row-->
            <div class="tile"></div><div class="tile"></div><div class="tile"></div>
            <div class="tile"></div><div class="tile"></div>
        </div>
        <div class="row justify-content-center">
            <!--5 tiles per row-->
            <div class="tile"></div><div class="tile"></div><div class="tile"></div>
            <div class="tile"></div><div class="tile"></div>
        </div>
        <div class="row justify-content-center">
            <!--5 tiles per row-->
            <div class="tile"></div><div class="tile"></div><div class="tile"></div>
            <div class="tile"></div><div class="tile"></div>
        </div>
    </div>
    <!--Create the Keyboard-->
    <div id="keyboard" class="mx-auto">
        <div class="d-flex justify-content-center mb-1">
            <button class="btn btn-secondary keyboard-key">Q</button>
            <button class="btn btn-secondary keyboard-key">W</button>
            <button class="btn btn-secondary keyboard-key">E</button>
            <button class="btn btn-secondary keyboard-key">R</button>
            <button class="btn btn-secondary keyboard-key">T</button>
            <button class="btn btn-secondary keyboard-key">Y</button>
            <button class="btn btn-secondary keyboard-key">U</button>
            <button class="btn btn-secondary keyboard-key">I</button>
            <button class="btn btn-secondary keyboard-key">O</button>
            <button class="btn btn-secondary keyboard-key">P</button>
        </div>
        <div class="d-flex justify-content-center mb-1">
            <button class="btn btn-secondary keyboard-key">A</button>
            <button class="btn btn-secondary keyboard-key">S</button>
            <button class="btn btn-secondary keyboard-key">D</button>
            <button class="btn btn-secondary keyboard-key">F</button>
            <button class="btn btn-secondary keyboard-key">G</button>
            <button class="btn btn-secondary keyboard-key">H</button>
            <button class="btn btn-secondary keyboard-key">J</button>
            <button class="btn btn-secondary keyboard-key">K</button>
            <button class="btn btn-secondary keyboard-key">L</button>
        </div>
        <div class="d-flex justify-content-center">
            <button class="btn btn-secondary keyboard-key-delete">Del</button>
            <button class="btn btn-secondary keyboard-key">Z</button>
            <button class="btn btn-secondary keyboard-key">X</button>
            <button class="btn btn-secondary keyboard-key">C</button>
            <button class="btn btn-secondary keyboard-key">V</button>
            <button class="btn btn-secondary keyboard-key">B</button>
            <button class="btn btn-secondary keyboard-key">N</button>
            <button class="btn btn-secondary keyboard-key">M</button>
            <button class="btn btn-secondary keyboard-key-enter">Enter</button>
        </div>
    </div>
</div>

<!--Add JS implementation of game-->
<script src="/resources/game.js"></script>
</body>
</html>