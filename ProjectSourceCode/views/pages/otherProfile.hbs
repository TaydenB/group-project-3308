<div class="container py-4">
  <div class="row">
    <div class="col-9">
      <h2 class="mb-3">@{{username}}</h2>
      <div class="card mb-4">
        <div class="card-body">
          <h4>Profile Info</h4>
          <p><strong>Name:</strong> {{#if full_name}}{{full_name}}{{else}}Not provided{{/if}}</p>
          <p><strong>Email:</strong> {{email}}</p>
        </div>
      </div>
      <div class="card mb-4">
        <div class="card-body">
          <h4>Stats</h4>

          <p><strong>Daily Stats:</strong></p>
          <ul>
            <li>Plays: {{stats.plays}}</li>
            <li>Wins: {{stats.wins}}</li>
            <li>Avg Guesses: {{stats.avgGuesses}}</li>
            <li>Avg Time: {{stats.avgTime}}</li>
          </ul>
          <p><strong>Challenge Stats:</strong></p>
          <ul>
            <li>Plays: {{stats.challengePlays}}</li>
            <li>Wins: {{stats.challengeWins}}</li>
          </ul>
        </div>
      </div>
        
      <div class="card">
        <div class="card-body">
          <h4>Friends</h4>
          <ul class="list-group">
            {{#each friends}}
              <li class="list-group-item d-flex justify-content-between">
                <span>{{username}}</span>
              </li>
            {{/each}}
          </ul>
        </div>
      </div>

    </div>
  </div>
</div>