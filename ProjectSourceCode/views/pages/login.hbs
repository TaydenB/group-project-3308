<style>
  body{
    background-color: #181818;
    color: white;
  }
  .login-container{
    min-height: 120hv;
    padding-top: 2rem;
    padding-bottom: 2rem;
  }
  .login-container input[type="text"], input[type="password"]{
    background-color: #242424;
    color: white;
    border: 1px solid #444;
  }
  .btn.btn-primary{
    background-color: #C6AA76;
    border-color: white;
    color: white;
  }
  p{
    color: white;
  }
  a{
    color: #C6AA76;
  }
</style>
<div class="container d-flex justify-content-center align-items-center" style="min-height: 80vh;">
  <div class="col-md-4">
    <div class="card shadow-sm p-4">
      <h2 class="text-center mb-4">Login</h2>

      <form method="POST" action="/login">
        <div class="mb-3">
          <label for="username" class="form-label">Username</label>
          <input type="text" name="username" id="username" class="form-control border-secondary">
        </div>

        <div class="mb-3">
          <label for="password" class="form-label">Password</label>
          <input type="password" name="password" id="password" class="form-control bg-white border-secondary">
        </div>

        <button type="submit" class="btn btn-primary w-100">Login</button>
      </form>

      <div class="text-center mt-3">
        <span>Don't have an account?</span>
        <a href="/register" class="ms-1">Register</a>
      </div>
    </div>
  </div>
</div>

{{> message}}